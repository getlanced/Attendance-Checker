        <Grid HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="648" Margin="0,50,0,0">
            <TextBox x:Name="firstName_textBox" HorizontalAlignment="Left" Height="24" Margin="109,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
            <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Margin="54,30,0,0" TextWrapping="Wrap" Text="FullName" VerticalAlignment="Top"/>
            <TextBox x:Name="studentNumber_textBox" HorizontalAlignment="Left" Height="24" Margin="109,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
            <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="16,78,0,0" TextWrapping="Wrap" Text="Student Number" VerticalAlignment="Top"/>
            <Button x:Name="search_button" Content="Search" HorizontalAlignment="Left" Margin="499,117,0,0" VerticalAlignment="Top" Width="139" Height="24"/>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="272,33,0,0" TextWrapping="Wrap" Text="Ex. Tan, Mc Henry C" VerticalAlignment="Top" FontStyle="Italic" FontSize="11" Height="13" Width="115"/>
        </Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="416" VerticalAlignment="Top" Width="648" Margin="0,205,0,0"/>

    </Grid>
</Page>
