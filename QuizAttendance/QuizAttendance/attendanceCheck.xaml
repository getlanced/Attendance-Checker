            </ComboBox>
            <ComboBox x:Name="month_comboBox" HorizontalAlignment="Left" Margin="539,21,0,0" VerticalAlignment="Top" Width="47" SelectedIndex="0">
                <ComboBoxItem Content="01"/>
                <ComboBoxItem Content="02"/>
